<div class="col-md-3 mt-4">
  <div class="card">
    <%= image_tag badge.img_name, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title">
        <%= badge.title %>
      </h5>
      <p class="card-text">
        <%= badge.description %>
      </p>

      <div class="btn-group btn-group-sm">
        <%= link_to t('show'), admin_badge_path(badge), class: 'btn btn-outline-primary' %>
        <%= link_to t('edit'),
                              edit_admin_badge_path(badge),
                              class: 'btn btn-outline-primary' %>
        <%= link_to t('delete'),
                              admin_badge_path(badge),
                              method: :delete,
                              data: { confirm: t('confirm_message') },
                              class: 'btn btn-outline-danger' %>
      </div>
    </div>
  </div>
</div>
