<header>
  <div class="wrapper">
    
    <div>
      <span class="project_name"><%= link_to "TestGuru", root_path %></span>
    </div>

    <div>
      <% if user_signed_in? %>
        <p class="nav user"><%= t('welcome_master', first_name: current_user.first_name, last_name: current_user.last_name).html_safe %></p> |
        <%= link_to t('logout'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('signup'), new_user_registration_path %> |
        <%= link_to t('login'), new_user_session_path %>
      <% end %>
    </div>
    
  </div>
</header>