<tr>
  <td>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  
  <td><%= test.questions.count %></td>

  <td>
    <div class="btn-group btn-group-sm">
      <%= link_to t('show'), admin_test_path(test), class: 'btn btn-outline-primary' %>
      <%= link_to t('edit'),
                            edit_admin_test_path(test),
                            data: { test_id: test.id },
                            class: 'btn btn-outline-primary form-inline-link' %>
      <%= link_to t('delete'),
                            admin_test_path(test),
                            method: :delete,
                            data: { confirm: t('confirm_message') },
                            class: 'btn btn-outline-danger' %>
    </div>
  </td>
</tr>