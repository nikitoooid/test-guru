<% flash.each do |key, message| %>
  <% if key == 'alert' %>
    <%= content_tag :div, message, class: 'alert alert-danger', role: 'alert' %>
  <% elsif key == 'notice' %>
    <%= content_tag :div, message, class: 'alert alert-primary', role: 'alert' %>
  <% else %>
    <%= content_tag :div, message, class: "alert alert-#{key}", role: 'alert' %>
  <% end %>
<% end %>