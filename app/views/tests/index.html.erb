<h1><%= t('tests.index.header') %></h1>

<table class="table mt-3">
  <thead>
    <tr>
      <th scope="col" class="sort-by-title pointer">
        <%= Test.human_attribute_name(:title) %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th scope="col"><%= Test.human_attribute_name(:questions) %></th>
      <th scope="col"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>
